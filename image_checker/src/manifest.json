{
  "manifest_version": 3,
  "name": "AutoPopup Metadata GPS Checker",
  "version": "1.0",
  "description": "Auto-opens popup to check and strip GPS/exif geolocation from images or Word (.docx) files.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Metadata GPS Checker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "exif.js", "jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}


